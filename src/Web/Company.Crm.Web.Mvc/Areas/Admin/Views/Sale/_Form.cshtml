@model CreateOrUpdateSaleDto

@if (!Html.ViewData.ModelState.IsValid)
{
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
}

<div class="row mb-3">
    <label asp-for="EmployeeUserId" class="col-lg-3 col-form-label"></label>
    <div class="col-lg-9">
        <input asp-for="EmployeeUserId" class="form-control" />
        <span asp-validation-for="EmployeeUserId" class="text-danger"></span>
    </div>
</div>
<div class="row mb-3">
    <label asp-for="RequestId" class="col-lg-3 col-form-label"></label>
    <div class="col-lg-9">
        <input asp-for="RequestId" class="form-control" />
        <span asp-validation-for="RequestId" class="text-danger"></span>
    </div>
</div>
<div class="row mb-3">
    <label asp-for="SaleDate" class="col-lg-3 col-form-label"></label>
    <div class="col-lg-9">
        <input asp-for="SaleDate" class="form-control"  />
        <span asp-validation-for="SaleDate" class="text-danger"></span>
    </div>
</div>
<div class="row mb-3">
    <label asp-for="SaleAmount" class="col-lg-3 col-form-label"></label>
    <div class="col-lg-9">
        <input asp-for="SaleAmount" class="form-control" />
        <span asp-validation-for="SaleAmount" class="text-danger"></span>
    </div>
</div>
<div class="row mb-3">
    <label asp-for="Description" class="col-lg-3 col-form-label"></label>
    <div class="col-lg-9">
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}